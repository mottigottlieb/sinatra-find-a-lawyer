
<% if logged_in? %>
	<% @user = User.find_by_id(session[:user_id]) %>
	<div class="container">
		<div class="row">

		<div class="col-lg-12">
			<h3 class="text-center">Welcome <%= @user.username %> </h3>

		</div>
		</div>
	</div>
	<%else%>
	<%= "Not Logged in" %>
 <%end%>





<div class="container">

        <div class="row">
            <div class="col-lg-10  col-lg-push-1 red">
            <div class="col-lg-4 jumbotron">

                    <form method="post" action="/lawyer_search">
														<h4>Find a Lawyer</h4>
                  <fieldset class="form-group">

                    <label for="legal">Legal Issue:</label>
                    <input type="text" class="form-control" id="legal" name="legal" placeholder="eg: Bankruptcy">
                  </fieldset>
                   <fieldset class="form-group">
                    <label for="location">Location:</label>
                    <input type="text" class="form-control" id="location" name="location" placeholder="Zip Code, State, City">
                  </fieldset>
                    <button type="submit" class="btn btn-default">Find <span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
        </form>

            </div>
           <div class="col-lg-6 col-lg-push-1 my-lawyers jumbotron ">

    <table class="table table-hover">


      <thead>

        <tr>
          <th>ID:</th>
          <th>Name:</th>
          <th>Number:</th>
        </tr>
      </thead>
      <tbody>
					<%=@id%>
					<%@user.lawyers.all.each do |lawyer|%>
					<% @id=1 %>
        <tr>
          <td><%= lawyer.id %></td>
          <td><%=lawyer.name%></td>
				<%	if lawyer.number = "" %>
					<td>Not Found </td>
				<%	else %>
					<td><%=lawyer.number%> </td>
					<%end%>
          <td><a href="/lawyer/<%=lawyer.id%>"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a></td>
        </tr>
				<% @id += 1 %>
					<%end%>


      </tbody>
    </table>



</div>






        </div>
        <!-- /.row -->
<style>
.form-wrapper{border:1px solid red;
        padding: 3em;}
        .red {
          border: 1px solid red;
          padding: 2em;
        }
        .my-lawyers{
          border: 1px solid gray;
          height:20em;
          overflow: scroll;
        }
				.my-lawyers td {
					cursor: pointer;
				}
				::-webkit-scrollbar {
    width: 12px;
}

::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
}
</style>
